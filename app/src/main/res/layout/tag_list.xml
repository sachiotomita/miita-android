<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tag_list_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/tag_list_padding">

    <ImageView
        android:id="@+id/tag_list_image"
        android:layout_width="@dimen/tag_list_image_width"
        android:layout_height="@dimen/tag_list_image_height"
        android:paddingTop="@dimen/tag_list_image_padding_top"
        android:backgroundTint="@color/loadingImage" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/tag_list_text_container_margin_start">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tag_list_id_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tag_list_id_text_size"
                android:textColor="@color/colorAccent"
                android:lines="2" />

            <TextView
                android:id="@+id/tag_list_count_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tag_list_count_text_size"
                android:textColor="@color/tag_list_count_text_color"
                android:lines="1" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>